{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "static",
    "rewrites": [{
      "source": "/rest/unregisterDevice",
      "function": "unregisterDevice"
    }, {
      "source": "/rest/registerDevice",
      "function": "registerDevice"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
